{
  "required": [
    "id",
    "protocol",
    "host",
    "port",
    "connect_timeout",
    "read_timeout",
    "write_timeout"
  ],
  "properties": {
    "ca_certificates": {
      "items": {
        "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
        "type": "string",
        "description": "must be a valid UUID"
      },
      "type": "array"
    },
    "connect_timeout": {
      "maximum": 2147483646,
      "minimum": 1,
      "type": "integer"
    },
    "created_at": {
      "minimum": 1,
      "type": "integer"
    },
    "enabled": {
      "type": "boolean"
    },
    "host": {
      "maxLength": 256,
      "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?(.[a-z0-9]([-a-z0-9]*[a-z0-9])?)*$",
      "type": "string",
      "description": "must be a valid hostname"
    },
    "id": {
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "type": "string",
      "description": "must be a valid UUID"
    },
    "name": {
      "maxLength": 128,
      "minLength": 1,
      "pattern": "^[0-9a-zA-Z.\\-_~]*$",
      "type": "string"
    },
    "path": {
      "type": "string",
      "allOf": [
        {
          "pattern": "^/.*",
          "description": "must begin with `/`"
        },
        {
          "maxLength": 1024,
          "description": "length must not exceed 1024"
        },
        {
          "not": {
            "pattern": "//",
            "description": "must not contain `//`"
          }
        }
      ]
    },
    "port": {
      "maximum": 65535,
      "minimum": 1,
      "type": "integer"
    },
    "protocol": {
      "enum": [
        "http",
        "https",
        "grpc",
        "grpcs",
        "tcp",
        "udp",
        "tls"
      ],
      "type": "string"
    },
    "read_timeout": {
      "maximum": 2147483646,
      "minimum": 1,
      "type": "integer"
    },
    "retries": {
      "maximum": 32767,
      "minimum": 1,
      "type": "integer"
    },
    "tags": {
      "items": {
        "maxLength": 128,
        "minLength": 1,
        "pattern": "^[0-9a-zA-Z.\\-_~]*$",
        "type": "string"
      },
      "maxItems": 8,
      "type": "array"
    },
    "tls_verify": {
      "type": "boolean"
    },
    "tls_verify_depth": {
      "maximum": 64,
      "minimum": 0,
      "type": "integer"
    },
    "updated_at": {
      "minimum": 1,
      "type": "integer"
    },
    "write_timeout": {
      "maximum": 2147483646,
      "minimum": 1,
      "type": "integer"
    }
  },
  "additionalProperties": false,
  "type": "object",
  "allOf": [
    {
      "description": "tls_verify can be set only when protocol is `https`",
      "if": {
        "required": [
          "tls_verify"
        ],
        "properties": {
          "tls_verify": {
            "const": true
          }
        }
      },
      "then": {
        "required": [
          "protocol"
        ],
        "properties": {
          "protocol": {
            "const": "https"
          }
        }
      }
    },
    {
      "description": "tls_verify_depth can be set only when protocol is `https`",
      "if": {
        "required": [
          "tls_verify_depth"
        ]
      },
      "then": {
        "required": [
          "protocol"
        ],
        "properties": {
          "protocol": {
            "const": "https"
          }
        }
      }
    },
    {
      "description": "ca_certificates can be set only when protocol is `https`",
      "if": {
        "required": [
          "ca_certificates"
        ]
      },
      "then": {
        "required": [
          "protocol"
        ],
        "properties": {
          "protocol": {
            "const": "https"
          }
        }
      }
    },
    {
      "description": "path is required when protocol is http or https",
      "if": {
        "required": [
          "protocol"
        ],
        "properties": {
          "protocol": {
            "oneOf": [
              {
                "const": "https"
              },
              {
                "const": "http"
              }
            ]
          }
        }
      },
      "then": {
        "required": [
          "path"
        ]
      }
    },
    {
      "description": "path can be set only when protocol is 'http' or 'https'",
      "if": {
        "required": [
          "protocol"
        ],
        "properties": {
          "protocol": {
            "oneOf": [
              {
                "const": "grpc"
              },
              {
                "const": "grpcs"
              },
              {
                "const": "tcp"
              },
              {
                "const": "tls"
              },
              {
                "const": "udp"
              }
            ]
          }
        }
      },
      "then": {
        "properties": {
          "path": {
            "not": {}
          }
        }
      }
    },
    {
      "not": {
        "required": [
          "ca_certificates"
        ]
      },
      "description": "ca_certificates are not yet implemented"
    }
  ]
}